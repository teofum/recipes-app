generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  email         String    @unique
  username      String    @unique
  displayName   String
}

model Auth {
  id            String    @id @default(uuid())
  username      String    @unique
  passwordHash  String
}
